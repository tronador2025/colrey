  <!-- Cierre -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-gray-700 text-lg">
          Colegio COLREY<br />
          Santa Rosa de Viterbo, Boyacá
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  section:nth-child(1) .fade-in-up {
    animation-delay: 0.2s;
  }

  section:nth-child(2) .fade-in-up {
    animation-delay: 0.1s;
  }

  section:nth-child(3) .fade-in-up:nth-child(1) {
    animation-delay: 0.1s;
  }

  section:nth-child(3) .fade-in-up:nth-child(2) {
    animation-delay: 0.2s;
  }

  section:nth-child(3) .fade-in-up:nth-child(3) {
    animation-delay: 0.3s;
  }

  section:nth-child(4) .fade-in-up {
    animation-delay: 0.1s;
  }

  @media (prefers-reduced-motion: reduce) {
    .fade-in-up {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>

<script>
  // Scroll reveal animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);

  document.querySelectorAll('.fade-in-up').forEach(el => {
    observer.observe(el);
  });
</script>

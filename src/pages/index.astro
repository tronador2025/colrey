---
import BaseLayout from '../layouts/BaseLayout.astro';
import ColreyAssistant from '../components/ColreyAssistant.astro';
---

<BaseLayout
  title="Colegio COLREY - 25 años formando estudiantes felices y bilingües"
  description="Colegio COLREY. 25 años de experiencia. Resultados ICFES sobresalientes. Certificación Cambridge English. Educación desde Prejardín hasta grado Once. Admisiones 2026 abiertas."
>
  <!-- Hero IA-First -->
  <section class="relative h-screen min-h-[800px] flex items-center justify-center overflow-hidden">
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      class="absolute inset-0 w-full h-full object-cover z-0"
    >
      <source src="/video_children00.mp4" type="video/mp4" />
    </video>
    
    <div class="absolute inset-0 bg-gradient-to-b from-primary-600/60 via-primary-500/50 to-primary-700/70 z-10"></div>
    
    <div class="container mx-auto px-4 lg:px-6 relative z-20">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-5xl sm:text-6xl lg:text-8xl font-bold text-white mb-6 leading-[1.05] drop-shadow-2xl hero-title">
            Ser Colrey<br />vale la pena
          </h1>
          <p class="text-xl sm:text-2xl lg:text-3xl text-white/95 mb-12 leading-relaxed drop-shadow-lg max-w-4xl mx-auto font-light hero-subtitle">
            25 años formando estudiantes felices, bilingües y con excelencia
          </p>
        </div>

        <!-- Input conversacional visible -->
        <div class="max-w-3xl mx-auto mb-8 hero-input">
          <div class="bg-white/95 backdrop-blur-xl rounded-2xl p-6 shadow-2xl border border-white/20">
            <div class="flex gap-3">
              <input 
                type="text" 
                id="hero-assistant-input" 
                placeholder="Escribe tu pregunta sobre admisiones, costos o metodología"
                class="flex-1 px-4 py-4 border-0 rounded-xl focus:ring-2 focus:ring-primary-500 text-gray-900 text-lg"
              />
              <button 
                onclick="openWhatsApp()"
                class="bg-green-600 text-white px-8 py-4 rounded-xl font-bold hover:bg-green-700 transition-all flex items-center gap-2 shadow-lg hover:shadow-xl"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                Preguntar
              </button>
            </div>
            <div id="hero-input-message" class="hidden mt-3 text-sm text-white/80 text-center"></div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center hero-buttons">
          <a href="/admisiones-2026" class="bg-white text-primary-700 px-10 py-5 rounded-xl font-bold text-lg hover:bg-primary-50 transition-all shadow-xl hover:shadow-2xl transform hover:-translate-y-1">
            Admisiones 2026
          </a>
          <a href="/utiles-escolares-2026" class="bg-white/20 backdrop-blur-xl text-white px-10 py-5 rounded-xl font-semibold text-lg hover:bg-white/30 transition-all border-2 border-white/50 shadow-xl">
            Ver útiles escolares
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Asistente IA Visible -->
  <section class="py-20 lg:py-32 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-6 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            Asistente Inteligente
          </div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            ¿Tienes dudas?
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Pregúntale directamente a nuestro asistente inteligente
          </p>
        </div>
        <ColreyAssistant />
      </div>
    </div>
  </section>

  <!-- Resultados ICFES - Rehecho desde cero -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
            Resultados que hablan<br />por sí solos
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Nuestro compromiso con la excelencia académica se refleja en resultados consistentes que nos posicionan entre los mejores colegios de Boyacá.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="text-center">
            <div class="text-6xl lg:text-7xl font-bold text-primary-600 mb-4">25</div>
            <div class="text-sm uppercase tracking-wider text-gray-500 font-semibold mb-3">años</div>
            <p class="text-gray-700 text-lg">de experiencia educativa transformando vidas</p>
          </div>
          <div class="text-center">
            <div class="text-6xl lg:text-7xl font-bold text-primary-600 mb-4">ICFES</div>
            <div class="text-sm uppercase tracking-wider text-gray-500 font-semibold mb-3">resultados</div>
            <p class="text-gray-700 text-lg">primeros lugares en Boyacá</p>
          </div>
          <div class="text-center">
            <div class="text-6xl lg:text-7xl font-bold text-primary-600 mb-4">Cambridge</div>
            <div class="text-sm uppercase tracking-wider text-gray-500 font-semibold mb-3">certificado</div>
            <p class="text-gray-700 text-lg">certificación internacional</p>
          </div>
        </div>

        <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-3xl p-8 lg:p-12 border border-primary-200">
          <div class="max-w-4xl mx-auto text-center">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Compromiso con la excelencia</h3>
            <p class="text-lg text-gray-700 leading-relaxed mb-6">
              En COLREY, la excelencia académica no es un objetivo, es un resultado natural de nuestro modelo educativo. 
              Nuestros estudiantes alcanzan los más altos puntajes en las pruebas ICFES, demostrando que cuando se combina 
              felicidad, metodología innovadora y acompañamiento personalizado, los resultados hablan por sí solos.
            </p>
            <p class="text-lg text-gray-700 leading-relaxed">
              Estos logros son el reflejo del trabajo conjunto entre estudiantes, familias y docentes comprometidos con 
              una educación de calidad que trasciende lo académico y forma personas íntegras.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Metodología - Emocional -->
  <section class="py-20 lg:py-32 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <img src="/img_00.png" alt="Metodología COLREY" class="w-full h-[500px] object-cover rounded-3xl shadow-2xl" />
          </div>
          <div>
            <div class="text-primary-600 text-sm uppercase tracking-wider font-semibold mb-4">Nuestra metodología</div>
            <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8 leading-tight">
              Aquí los niños aprenden jugando,<br />pero con resultados reales
            </h2>
            <p class="text-xl text-gray-700 leading-relaxed mb-8">
              Nuestro modelo educativo se centra en la felicidad del estudiante. Creemos que cuando los niños disfrutan 
              aprendiendo, el conocimiento se vuelve significativo y perdurable. Combinamos metodologías lúdicas con 
              estándares académicos rigurosos, logrando que nuestros estudiantes no solo alcancen la excelencia, sino 
              que desarrollen amor por el aprendizaje.
            </p>
            <a href="/el-colegio/modelo-educativo" class="inline-flex items-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-primary-700 transition-colors">
              Conocer más sobre nuestra metodología
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Admisiones - Conversión -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
            Admisiones 2026
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Un proceso claro y acompañado para que tu familia sea parte de COLREY
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 border border-primary-100">
            <div class="w-16 h-16 bg-primary-600 rounded-2xl flex items-center justify-center mb-6">
              <span class="text-white font-bold text-2xl">1</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Solicitud</h3>
            <p class="text-gray-700 leading-relaxed">
              Completa el formulario de inscripción o contáctanos directamente. Nuestro equipo te brindará toda la información que necesites.
            </p>
          </div>

          <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 border border-primary-100">
            <div class="w-16 h-16 bg-primary-600 rounded-2xl flex items-center justify-center mb-6">
              <span class="text-white font-bold text-2xl">2</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Evaluación</h3>
            <p class="text-gray-700 leading-relaxed">
              Reunión informativa y evaluación académica. Este proceso nos permite conocer mejor a cada estudiante y asegurar el mejor acompañamiento.
            </p>
          </div>

          <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 border border-primary-100">
            <div class="w-16 h-16 bg-primary-600 rounded-2xl flex items-center justify-center mb-6">
              <span class="text-white font-bold text-2xl">3</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Matrícula</h3>
            <p class="text-gray-700 leading-relaxed">
              Una vez aceptado, procedemos con la matrícula oficial y te damos la bienvenida a la familia COLREY.
            </p>
          </div>
        </div>

        <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-3xl p-8 lg:p-12 text-center text-white">
          <h3 class="text-3xl font-bold mb-6">¿Tienes dudas sobre el proceso?</h3>
          <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
            Nuestro asistente inteligente puede resolver tus preguntas sobre admisiones, costos o cualquier otro tema.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/admisiones-2026" class="bg-white text-primary-700 px-10 py-5 rounded-xl font-bold text-lg hover:bg-primary-50 transition-all shadow-xl">
              Ver proceso completo
            </a>
            <a href="#colrey-assistant" class="bg-white/20 backdrop-blur-sm text-white px-10 py-5 rounded-xl font-semibold text-lg hover:bg-white/30 transition-all border-2 border-white/40">
              Hablar con el asistente
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonios -->
  <section class="py-20 lg:py-32 bg-gray-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            Lo que dicen<br />nuestras familias
          </h2>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="bg-white p-10 rounded-3xl border border-gray-100 shadow-lg">
            <div class="flex items-center mb-8">
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-700 rounded-full flex items-center justify-center mr-5 flex-shrink-0">
                <span class="text-white font-bold text-2xl">M</span>
              </div>
              <div>
                <div class="font-bold text-gray-900 text-xl">María González</div>
                <div class="text-sm text-gray-600">Madre de familia</div>
              </div>
            </div>
            <p class="text-gray-700 leading-relaxed text-xl italic">
              "Mi hijo ha encontrado en COLREY un lugar donde puede ser feliz mientras aprende. La metodología lúdica ha transformado su relación con el estudio."
            </p>
          </div>

          <div class="bg-white p-10 rounded-3xl border border-gray-100 shadow-lg">
            <div class="flex items-center mb-8">
              <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-700 rounded-full flex items-center justify-center mr-5 flex-shrink-0">
                <span class="text-white font-bold text-2xl">C</span>
              </div>
              <div>
                <div class="font-bold text-gray-900 text-xl">Carlos Ramírez</div>
                <div class="text-sm text-gray-600">Estudiante</div>
              </div>
            </div>
            <p class="text-gray-700 leading-relaxed text-xl italic">
              "Me encanta venir al colegio. Aprendo inglés de verdad y los profesores hacen que todo sea divertido. Me siento feliz aquí."
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="relative py-32 lg:py-40 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img src="/img_00.png" alt="Estudiantes COLREY" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-br from-primary-700/95 via-primary-600/90 to-primary-800/95"></div>
    </div>
    
    <div class="container mx-auto px-4 lg:px-6 relative z-20 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl lg:text-6xl font-bold text-white mb-8 leading-tight drop-shadow-2xl">
          Las admisiones 2026<br />ya están abiertas
        </h2>
        <p class="text-xl lg:text-2xl text-white/95 mb-12 leading-relaxed drop-shadow-lg max-w-3xl mx-auto">
          Únete a una comunidad educativa que forma estudiantes felices, bilingües y con excelencia académica
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/admisiones-2026" class="bg-white text-primary-700 px-12 py-6 rounded-xl font-bold text-lg hover:bg-primary-50 transition-all shadow-2xl hover:shadow-3xl transform hover:-translate-y-1">
            Iniciar proceso de admisión
          </a>
          <a href="/utiles-escolares-2026" class="bg-white/20 backdrop-blur-xl text-white px-12 py-6 rounded-xl font-semibold text-lg hover:bg-white/30 transition-all border-2 border-white/50 shadow-xl">
            Ver útiles escolares
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Animación elegante del Hero */
  @media (prefers-reduced-motion: no-preference) {
    .hero-title {
      opacity: 0;
      transform: translateY(30px);
      animation: heroTitleReveal 0.8s ease-out forwards;
    }

    .hero-subtitle {
      opacity: 0;
      transform: translateY(20px);
      animation: heroSubtitleReveal 0.7s ease-out 0.3s forwards;
    }

    .hero-input {
      opacity: 0;
      transform: translateY(20px);
      animation: heroElementReveal 0.6s ease-out 0.6s forwards;
    }

    .hero-buttons {
      opacity: 0;
      transform: translateY(20px);
      animation: heroElementReveal 0.6s ease-out 0.8s forwards;
    }

    @keyframes heroTitleReveal {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes heroSubtitleReveal {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes heroElementReveal {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  /* Fallback para navegadores sin soporte de animación */
  @media (prefers-reduced-motion: reduce) {
    .hero-title,
    .hero-subtitle,
    .hero-input,
    .hero-buttons {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>

<script>
  // Funcionalidad del input conversacional en el hero - CTA a WhatsApp
  function openWhatsApp() {
    const input = document.getElementById('hero-assistant-input');
    const messageDiv = document.getElementById('hero-input-message');
    const question = input.value.trim();
    
    if (!question) {
      // Mostrar mensaje sutil si está vacío
      if (messageDiv) {
        messageDiv.textContent = 'Escribe tu pregunta';
        messageDiv.classList.remove('hidden');
        setTimeout(() => {
          messageDiv.classList.add('hidden');
        }, 3000);
      }
      return;
    }
    
    // Codificar el mensaje para URL
    const encodedMessage = encodeURIComponent(question);
    const whatsappUrl = `https://wa.me/573134571781?text=${encodedMessage}`;
    
    // Abrir WhatsApp
    window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
    
    // Limpiar input
    input.value = '';
  }

  // Permitir Enter en el input del hero
  document.addEventListener('DOMContentLoaded', () => {
    const heroInput = document.getElementById('hero-assistant-input');
    if (heroInput) {
      heroInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          openWhatsApp();
        }
      });
    }
  });
</script>
